# 背景色（暗め）
background = #1e1f1f

# フォントを読みやすくする
font-thicken

# フォントの指定
font-family = Moralerspace Neon
font-size = 11

# 選択時に自動でクリップボードにコピー
copy-on-select = clipboard

# パネル間の移動（ctrl+q + hjkl）
keybind = ctrl+q>h=goto_split:left
keybind = ctrl+q>j=goto_split:bottom
keybind = ctrl+q>k=goto_split:top
keybind = ctrl+q>l=goto_split:right

# 縦分割（cmd+\）
keybind = super+backslash=new_split:right

# 横分割（shift+cmd+\）
keybind = shift+super+backslash=new_split:down

# 均等分割（shift+cmd+e）
keybind = shift+super+e=equalize_splits

# タブを閉じる（shift+cmd+w）
keybind = super+shift+w=close_tab

