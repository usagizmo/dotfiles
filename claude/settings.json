{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Read",
      "WebFetch",
      "WebSearch",
      "Skill(docs:*)",
      "Skill(commit:*)",
      "Mcp(serena:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opusplan",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Purr.aiff"
          }
        ]
      }
    ]
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": true
}
